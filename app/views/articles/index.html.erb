<h1>List of the Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan = "3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>

        <td>
         <%= link_to 'Show', article_path(item) %>
        </td>

        <td>
         <%= link_to 'Edit', edit_article_path(item) %>
        </td>
        
        <td>

        <%= link_to 'Delete', article_path(item), method: :delete, remote: true, data: { turbo_method: :delete, turbo_frame: 'item_form', confirm: 'Are you sure you want to delete this article?' } %>
        

        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create New Article', new_article_path%></p>

